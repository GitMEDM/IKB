<div class="hero-unit">

	<h1>BIEGI</h1>

	<%= link_to("Dodaj nowy bieg", {:action => 'nowa', :uzytkownik_id => @uzytkownik.id}, :class => 'btn btn-mini btn-primary')%>

	<p style="text-align: right;">Ilość biegów: <%= @biegi.size %></p>

	<hr>

	<table class="table table-striped">
		<tr class="info">
			<th>DATA</th>
			<th>NAZWA BIEGU</th>
			<th>MIEJSCOWOŚĆ</th>
			<th>DYSTANS</th>
			<th>AKCJA</th>
		</tr>
		<% @biegi.each do |bieg| %>
			<tr>
				<td><%= bieg.data %></td>
				<td><%= bieg.nazwa %></td>
				<td><%= bieg.miejscowosc %></td>
				<td>
					<table>
						<tr>
							<td class="right"><%= bieg.dystans %></td>
							<td><%= bieg.jednostkaMiary %></td>
						</tr>
					</table>
				</td>
				<td>
					<%= link_to("Szczegóły", {:action => 'szczegoly', :id => bieg.id}, :class => 'btn btn-xs btn-default')%>
					<%= link_to("Edytuj", {:action => 'edycja', :id => bieg.id}, :class => 'btn btn-xs btn-primary')%>
					<%= link_to("Usuń", {:action => 'usun', :id => bieg.id}, :class => 'btn btn-xs btn-danger')%>
				</td>
			</tr>
		<% end %>
	</table>
<div>
