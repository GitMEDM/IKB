<div class="well">
  	<legend>Logowanie</legend>
  	<div>
  		<%= form_tag(:action => 'logowanie') do %>
  			<table>
			    <tr>
			      <td><%= label_tag(:uzytkownik, "Użytkownik: ") %> &nbsp; </td>
			      <td><%= text_field_tag(:uzytkownik, "", :class => 'form-control') %></td>
			    </tr>
			    <tr>
			      <td><%= label_tag(:haslo, "Hasło: ") %> &nbsp; </td>
			      <td><%= password_field_tag(:haslo, "", :class => 'form-control') %></td>
			    </tr>
  			</table>
  			</br>
  			<div style="text-align: left;">
  				<%= submit_tag("Zaloguj", :class => 'btn  btn-success') %>
  			</div>
 		<% end %>
  	</div>
  	<hr>
  	<div>
  		<p>
  			Jeśli nie posiadasz konta to <%= link_to("zarejestruj się", {:action => 'registration'})%>.
  		</p>
  	</div>
</div>
